---
import BaseLayout from '$/layouts/BaseLayout.astro'
const {content} = Astro.props;
const tags = content.tags ? [...content.tags] : [];
---

<style lang="scss">
  @use "../styles/" as *;
</style>

<BaseLayout
  title={content.title}
  description={content.description}
  hideDescription="true"
>
  <p>Author: {content.author}</p>
  <div>
    <p>tags:</p>
    <ol>
      {tags.map(t => <li>{t}</li>)}
    </ol>
  </div>
  <hr />
  <slot />
</BaseLayout>