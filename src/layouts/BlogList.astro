---
import BaseLayout from '$/layouts/BaseLayout.astro'
import BlogPostPreview from '$/components/blog/BlogPostPreview.svelte';
const {title, description, posts} = Astro.props;
---

<style lang="scss">
  @use "../styles/" as *;
</style>

<BaseLayout
  title={title}
  description={description}
>
  {posts.map(post => <BlogPostPreview post={post} />)}
</BaseLayout>