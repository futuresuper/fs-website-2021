---
import BaseLayout from '$/layouts/BaseLayout.astro'
const {content} = Astro.props;
---

<style lang="scss">
  @use "../styles/" as *;
</style>

<BaseLayout
  title={content.title}
  description={content.description}
  hideDescription={true}
  intro={content.intro}
  skinnyContainer
>
  <slot />

  {content.title === "Reconciliation"  && <div>
    <a href="/rap" class="button">Download our Reconciliation Action Plan</a>
  </div> }
</BaseLayout>