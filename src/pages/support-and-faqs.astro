---
import BaseLayout from '$/layouts/BaseLayout.astro';
import Faqs from '../components/page/SupportAndFaqs/SupportAndFaqs.svelte';
let faqs = Astro.fetchContent('$/pages/faqs/*.md');
faqs = faqs.sort((a, b) => a.order - b.order);
const black100 = "#f5f5f5";

import pages from '../data/pages.json';
const relatedPages = [
  pages.CONTACT_US,
  pages.DOCUMENTS_AND_FORMS,
  pages.HOW_WE_INVEST
];
---

<style lang="scss">
  @use "../styles/" as *;
</style>

<BaseLayout
  title="Support and FAQs"
  description="Find answers to common questions here."
  noContainer={true}
  pageHeadBackgroundColour={black100}
  relatedPages={relatedPages}
>
  <Faqs client:load faqs={faqs} />
</BaseLayout>