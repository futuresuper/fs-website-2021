---
import BaseLayout from "@layouts/BaseLayout.astro";
import InvestmentOptionsPage from "@components/page/InvestmentOptions/InvestmentOptions.svelte";

import pages from "@data/pages.json";
import JoinNow from "@components/ui/JoinNow.svelte";
const relatedPages = [pages.HOW_WE_INVEST, pages.EVERYTHING_WE_INVEST_IN];

const black = "#212121";
---

<BaseLayout
  title="Investment Options"
  description="Future Super has three investment options to choose from."
  hideDescription
  noContainer
  relatedPages={relatedPages}
  pageHeadBackgroundColour={black}
>
  <InvestmentOptionsPage />
  <JoinNow />
</BaseLayout>
