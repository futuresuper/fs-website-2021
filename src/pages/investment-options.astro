---
import BaseLayout from '$/layouts/BaseLayout.astro'
import InvestmentOptions from '../components/page/InvestmentOptions/InvestmentOptions.svelte'

import pages from '../data/pages.json'
const relatedPages = [
  pages.HOW_WE_INVEST,
  pages.EVERYTHING_WE_INVEST_IN
]

const black = "#212121"
---

<style lang="scss">
  @use "../styles/" as *;
</style>

<BaseLayout
  title="Investment Options"
  description="Future Super has three investment options to choose from."
  hideDescription
  noContainer
  relatedPages={relatedPages}
  pageHeadBackgroundColour={black}
>
  <InvestmentOptions />
</BaseLayout>