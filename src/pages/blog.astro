---
import BaseLayout from "@layouts/BaseLayout.astro";
import BlogList from "@components/page/Blog/BlogList.svelte";

let allPosts = await Astro.glob("../blog-posts/*.md");
let posts = allPosts.sort(
  (a, b) =>
    new Date(b.frontmatter.date).valueOf() -
    new Date(a.frontmatter.date).valueOf()
);
let firstPage = posts.slice(0, 9);
---

<BaseLayout title="Blog" description="Whatâ€™s new at Future Super.">
  <BlogList posts={firstPage} nextUrl={"/blog/page/2"} />
</BaseLayout>
