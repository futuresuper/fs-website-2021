---
import BaseLayout from "@layouts/BaseLayout.astro";
import ContactUsPage from "@components/page/ContactUs.svelte";
import ZendeskChatWidget from "@components/common/ZendeskChatWidget.svelte";

let contactPage = await Astro.glob("../contact/contact-us.md");
const content = contactPage[0];
---

<BaseLayout
  title={content.frontmatter.title}
  description={content.frontmatter.description}
  pageDescription={content.frontmatter.intro}
>
  <ContactUsPage contact={content} />
  <ZendeskChatWidget />
</BaseLayout>
